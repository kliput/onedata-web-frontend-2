{{#bs-form onSubmit=(action "submit") as |form|}}
  {{#form.group}}
    {{one-way-select selectedStorageType
      class="form-control"
      options=storageTypes update=(action "storageTypeChanged")
    }}
  {{/form.group}}
  {{#form.group}}
    {{one-way-input storageName
      class="form-control"
      update=(action "inputChanged" "storageName")
      placeholder="Storage name"
    }}
  {{/form.group}}
  {{#form.group}}
    {{one-way-input username
      class="form-control"
      update=(action "inputChanged" "username")
      placeholder="Username"
    }}
  {{/form.group}}
  {{#form.group}}
    {{one-way-password password
      class="form-control"
      update=(action "inputChanged" "password")
      placeholder="Password"
    }}
  {{/form.group}}
  {{#form.group}}
    {{one-way-input bucketName
      class="form-control"
      update=(action "inputChanged" "bucketName")
      placeholder="Bucket name"
    }}
  {{/form.group}}
  {{#form.group}}
    <div class="row">
      <div class="col-xs-12 col-md-6">
        {{one-way-input blockSize
          class="form-control"
          update=(action "inputChanged" "blockSize")
          placeholder="Block size [bytes] (optional)"
        }}
      </div>
      <div class="col-xs-12 col-md-6">
        {{one-way-input timeout
          class="form-control"
          update=(action "inputChanged" "timeout")
          placeholder="Timeout (ms) [optional]"
        }}
      </div>
    </div>
  {{/form.group}}
  {{#form.group}}
    <label for={{concat elementId "-insecure-checkbox"}}>Insecure</label>
    {{one-way-checkbox insecure
      id=(concat elementId "-insecure-checkbox")
      update=(action "inputChanged" "insecure")
    }}
  {{/form.group}}
  <button type="submit" class="btn btn-default">
    Add
  </button>  
{{/bs-form}}
